mixin utility_bar(mobile)
  if mobile
      li.uk-parent
        a(href="#")
          | Login
        ul.uk-nav.uk-nav-navbar
          li
            a Student portal
          li
            a Staff portal
          li
            a Edit site
      li.uk-parent
        a(href="#")
          | Translate...
        ul.uk-nav.uk-nav-navbar
          li
            a English
          li
            a Deutsch
          li
            a русский
          li
            a 日本語
          li
            a ...
  else
    ul.uk-subnav.uk-hidden-small.uk-margin-bottom-remove.sws-quicklinks.uk-float-right
        li(data-uk-dropdown="{mode:'click'}")
          a
            |Login
            |
            i.uk-icon-caret-down
          .uk-dropdown.uk-dropdown-small
            ul.uk-nav.uk-nav-dropdown
              li
                a Student portal
              li
                a Staff portal
              li
                a Edit site

          li(data-uk-dropdown="{mode:'click'}")
            a
              |Translate...
              |
              i.uk-icon-caret-down
            .uk-dropdown.uk-dropdown-small
              ul.uk-nav.uk-nav-dropdown
                li
                  a English
                li
                  a Deutsch
                li
                  a русский
                li
                  a 日本語
                li
                  a ...
            li
              label.hamburger(for="search-trigger")
                span.sr-only Search button


    input#search-trigger.nav-trigger(type="checkbox")
    div#utilitybar
      div.utilitybar-searchBox.uk-container.uk-container-center
        form.gef-global-header__search-form(name="searchForm" method="get")
          label.searchBoxLabel#queryBoxLabel(for="query")
            span.sr-only Search
            input#query.link.empty(type="text" name="searchText" placeholder="Search site...")
            button#submit(type="submit" name="submit")
              i.uk-icon-search
              span.show-on-sr Submit

